<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:tns="http://www.paquete.com/xml/school"
	targetNamespace="http://www.paquete.com/xml/school"
	elementFormDefault="qualified">

	<xs:element name="StudentDetailsRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="name" type="xs:string" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="StudentDetailsResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Student" type="tns:Student" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- < Direccion del alumno > -->
	<xs:element name="StudentAddressRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="name" type="xs:string" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="StudentAddressResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="address" type="xs:string" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
	<!-- < Edad del profesor: peticion. Se indica el nombre > -->
	<xs:element name="ProffesorAgeRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="name" type="xs:string" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- < Edad del profesor: respuesta. devuelve la edad > -->
	<xs:element name="ProffesorAgeResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="age" type="xs:int" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- < Detalles del Profesor: peticion. Se le pasa el nombre > -->
	<xs:element name="ProffesorDetailsRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="name" type="xs:string" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- < Detalles del Profesor: devolucion. Devuelve el objeto profesor > -->
	<xs:element name="ProffesorDetailsResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Proffesor" type="tns:Proffesor" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- < Objeto Student, el cual tiene un profesor adjudicado > -->
	<xs:complexType name="Student">
		<xs:sequence>
			<xs:element name="name" type="xs:string" />
			<xs:element name="standard" type="xs:int" />
			<xs:element name="address" type="xs:string" />
			<xs:element name="Proffesor" type="tns:Proffesor" />
		</xs:sequence>
	</xs:complexType>
	
	<!-- < Objeto Proffesor, con los datos correspondientes > -->
	<xs:complexType name="Proffesor">
		<xs:sequence>
			<xs:element name="name" type="xs:string" />
			<xs:element name="address" type="xs:string" />
			<xs:element name="age" type="xs:int" />
		</xs:sequence>
	</xs:complexType>

</xs:schema>